doctype html
html(lang="en" class="h-full")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= productData.name
    link(rel="stylesheet", href="/styles/output.css")
  body(class="min-h-full bg-slate-50 text-slate-800")
    // Header
    header(class=" bg-white")
      .mx-auto.max-w-6xl.px-4.py-6
     
        h1(class="text-2xl md:text-3xl font-bold tracking-tight mt-2")= productData.name

    // Content
    main(class="mx-auto max-w-4xl px-4 py-10")
      article(class="rounded-2xl bg-white shadow-sm ring-1 ring-slate-200 overflow-hidden")
        // Banner
        div(class="h-36 relative")
          img(
             src=productData.imageURL
             alt=productData.name
             class="h-52 w-full object-cover"
             )
        //-   span(class="rounded-full bg-white/95 px-5 py-2 text-base font-semibold shadow")
        //-     | $ 
        //-     = (typeof productData.price === 'number' ? productData.price.toFixed(2) : productData.price)

        // Body
        div(class="p-6")
          h2(class="text-lg font-semibold text-slate-800") Product details
          p(class="text-xs text-slate-500 mt-1") ID: #{productData.id}

          p(class="mt-4 text-slate-700 leading-relaxed")= productData.description

          // Actions
          div(class="mt-6 flex gap-3")
            button(
              type="button"
              class="inline-flex items-center justify-center rounded-xl bg-blue-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-200"
            ) Add to cart
            a(
              href="/products"
              class="inline-flex items-center justify-center rounded-xl border px-5 py-2.5 text-sm font-medium transition hover:bg-slate-50 focus:outline-none focus:ring focus:ring-slate-200"
            ) Back to products Page

    // Footer
    footer(class="mx-auto max-w-6xl px-4 py-8 text-center text-xs text-slate-500")
      | Â© #{new Date().getFullYear()} 
